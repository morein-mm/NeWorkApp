<resources>

    <!-- Стиль AppBar -->
    <style name="AppBarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/appbar_background</item>
        <item name="android:layout_height">@dimen/appbar_height</item>
        <item name="contentInsetStart">@dimen/appbar_padding_start</item>
        <item name="contentInsetEnd">@dimen/appbar_padding_end</item>
        <item name="android:paddingTop">@dimen/appbar_padding_top</item>
        <item name="android:paddingBottom">@dimen/appbar_padding_bottom</item>
    </style>

    <!-- Стиль текста заголовка AppBar -->
    <style name="AppBarTitleTextStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/appbar_title_text</item>
        <item name="lineHeight">@dimen/appbar_title_line_height</item>
        <item name="android:textColor">@color/appbar_title</item>
    </style>

    <!-- Стиль кнопки меню в AppBar -->
    <style name="AppBarMenuButtonStyle">
        <item name="android:layout_width">@dimen/menu_button</item>
        <item name="android:layout_height">@dimen/menu_button</item>
        <item name="iconSize">@dimen/menu_icon</item>
        <item name="android:tint">@color/menu_icon</item>
    </style>


    <!-- Поле ввода, используется для полей логина и пароля -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/fill_color</item>
        <item name="boxStrokeColor">@color/active_color</item>
        <item name="hintTextColor">@color/active_color</item>
    </style>

    <!-- Кнопка Login, стиль заполненной кнопки -->
    <style name="ButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/active_color</item>
        <item name="cornerRadius">100dp</item> <!-- Радиус скругления углов кнопки -->
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Кнопка-ссылка, стиль текстовой кнопки -->
    <style name="ButtonLink" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:paddingStart">@dimen/link_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/link_button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/active_color</item>
    </style>

    <!-- Стиль текста для кнопок с заполненным фоном -->
    <style name="AppTheme.ButtonBigTextStyle.Filled" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Стиль текста для кнопок-ссылок -->
    <style name="AppTheme.ButtonBigTextStyle.Link" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/active_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="lineHeight">@dimen/button_line_height</item>
        <item name="android:letterSpacing">0.01</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


